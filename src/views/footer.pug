footer

  .innerFooter
    .top-footer
      .newsletter
        h3
          | Newsletter
          span Votre email n'est pas valide

        form.from-newletter
          input(type="text")
          button(type="submit") OK

      .communaute
        h3 Communauté
        ul
          each media in ['facebook', 'google-plus', 'twitter', 'pinterest']
            -var icon = 'flaticon-' + media
            li
              i(class=icon)

    nav
      ul
        each item in ['Votre Commande', 'Aides & services', 'À propos']
          li
            | #{item}
            i(class="arrow-down")

  .display

    each item in ['Livraison / Retour', 'Pont Relais', 'Paiement', 'Suivi de commande', 'Satisfait ou remboursé', 'Mentions légales', 'Conditions générales de vente', 'Conditions de livraison']
      li
        a(href="#") #{item}

  .links.small-only
    ul
      li
        a(href='#') À propos de Yakaroulercom
      li
        a(href='#') Magasins
      li
        a(href='#') Mentions légales
      li
        a(href='#') Conditions Générales de Vente
      li
        a(href='#') Conditions Générales d'utilisation
